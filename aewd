function big(plr)
	
	
	print("started")
	local Humanoid = plr.Character:WaitForChild("Humanoid",3);
	local HS = Humanoid.HeadScale;
	local BDS = Humanoid.BodyDepthScale;
	local BWS = Humanoid.BodyWidthScale;	
	local BHS = Humanoid.BodyHeightScale;

	spawn(function()
		for i=0, 30 do
			Humanoid.AutomaticScalingEnabled = false;
			HS.Value += 0.5;
			BDS.Value += 0.5;
			BWS.Value += 0.5;
			BHS.Value += 0.5;
			Humanoid.AutomaticScalingEnabled = true;
			wait();
		end
	end)

end

big(game.Players.staandz)
big(game.Players:FindFirstChild("bledthroughmyshirt"))
big(game.Players:FindFirstChild("f8_fn")
